<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_basic"
    tools:context=".Seller_register" >

    <com.fsn.cauly.CaulyAdView
	    xmlns:app="http://schemas.android.com/apk/res/com.nero.howmuch"
	    android:id="@+id/xmladview"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    app:appcode="CAULY-3DTEST"
	    app:effect="LeftSlide"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="사업자 번호 입력."/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        
		<EditText 
        android:id="@+id/et_seller_login_num1"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:inputType="number"
        android:numeric="decimal"
        android:maxLength="3"
        android:layout_height="wrap_content"/>
		<TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="-"/>
		<EditText 
        android:id="@+id/et_seller_login_num2"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:inputType="number"
        android:numeric="decimal"
        android:maxLength="2"
        android:layout_height="wrap_content"/>
		<TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="-"/>
		<EditText 
        android:id="@+id/et_seller_login_num3"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:inputType="number"
        android:numeric="decimal"
        android:maxLength="5"
        android:layout_height="wrap_content"/>
    </LinearLayout>
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="비밀 번호 입력."/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        
		<EditText 
        android:id="@+id/et_seller_login_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:password="true"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <Button 
            android:id="@+id/btn_seller_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="15dp"/>
    </LinearLayout>
</LinearLayout>